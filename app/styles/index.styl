@import url('http://fonts.googleapis.com/css?family=Open+Sans:600,400,300&subset=latin,cyrillic')

font-url(file)
  return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal', style = 'normal')
  @font-face
    font-family family
    src url(font-url(file + '.eot'))
    src url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
        url(font-url(file + '.woff')) format('woff'),
        url(font-url(file + '.ttf')) format('truetype'),
        url(font-url(file + '.svg#'+ family)) format('svg')
    font-weight weight
    font-style style
  if hack-chrome-windows
    @media screen and (-webkit-min-device-pixel-ratio:0)
      @font-face
        font-family family
        src url(font-url(file + '.svg#'+ family)) format('svg')


webfont('Proxima', 'ProximaNova-Reg', true, 'normal', 'normal')
webfont('Proxima', 'ProximaNova-Bold', true, 700, 'normal')
webfont('Proxima', 'ProximaNova-Light', true, 300, 'normal')

normal(font-size = 18px, line-height = 24px)
  font: 400 font-size/line-height 'Proxima', 'Open Sans', sans-serif !important
  -webkit-font-smoothing: antialiased

bold(font-size = 18px, line-height = 24px)
  font: 700 font-size/line-height 'Proxima', 'Open Sans', sans-serif !important
  -webkit-font-smoothing: antialiased

fixsize()
  max-width: 700px !important
  margin-left: auto !important
  margin-right: auto !important


body
  normal()
  background #fff

  .container
    fixsize()

  textarea
    resize: none !important
    -webkit-box-shadow: none !important
    box-shadow: none !important
    padding: 18px !important
    position: relative !important
    border-radius: 0 !important
    -webkit-border-radius: 0 !important
    font-size: 0.9em !important
    height: 97px !important
    // fixsize()
    box-sizing: border-box !important
    max-width: 700px !important
    margin-left: auto !important
    margin-right: auto !important

@media only screen and (max-width: 700px)
  body
    textarea
      left: -18px !important
      box-sizing: content-box !important


section[data-role=page]
  background #fff
  .ui-header
    background #fafafa
    border-color: #979797
    padding: 10px 0
    h1
      color #3faae2
      text-transform: uppercase
      fixsize()
  .ui-content
    p.label
      color #575757
      fixsize()
      img
        width 30px
        margin 0px 10px 0px 0px
        position relative
        top 5px

    p.counter, .send
      display inline-block
    p.counter
      color #666
    .send
      color #2ecc71
      float right
      margin-top 16px
      cursor pointer

    .answer
      border 1px solid #f15
      border-radius 10px
      text-align center
      padding 20px 0
      margin 10px 0
      cursor pointer

    .fill
      background #000
      display none
      position absolute
      top 0
      left 0
      height 100%
      width 100%
      z-index 500
      pointer-events none



  .ui-footer
    background #fff
    border none
    text-align center
    height 180px
    .controll_tip
      text-align center
      normal(14px, 20px)
      color: #7f7f7f
    .button
      display: inline-block
      margin: 5px 20px 20px 20px
      font-weight: 400
      cursor pointer
      &.slower
        color #3498db
        padding: 0 12px
        img
          width: 60px
      &.faster
        color #e67e22
        img
          width: 60px



.info
